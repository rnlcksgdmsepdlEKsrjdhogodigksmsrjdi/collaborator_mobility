<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mobility">

    <!-- 권한 설정 (기존 + 알림 권한) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 알림 권한 (필수) -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" /> <!-- Android 13+ 필수 -->
    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" /> <!-- 정확한 알림 스케줄링 -->
    <uses-permission android:name="android.permission.USE_EXACT_ALARM" /> <!-- Android 12+ -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- 재부팅 후 알림 복구 -->
    <!-- Vibrate 권한 (선택사항) -->
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="${applicationName}"
        android:label="mobility"
        android:icon="@mipmap/ic_launcher"
        android:usesCleartextTraffic="true"> <!-- HTTP 허용 (필요시) -->

        <!-- 알림 채널 메타데이터 추가 -->
        <meta-data
            android:name="com.google.firebase.messaging.default_notification_channel_id"
            android:value="reservation_channel" /> <!-- 코드와 일치해야 함 -->

        <!-- 부팅 후 알림 재등록 리시버 추가 -->
        <receiver
            android:name="com.dexterous.flutterlocalnotifications.ScheduledNotificationBootReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.QUICKBOOT_POWERON" /> <!-- LG 기기 지원 -->
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" /> <!-- 앱 업데이트 시 -->
            </intent-filter>
        </receiver>

        <!-- 기존 MainActivity 유지 -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode">
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 네이버 로그인 Activity (기존 유지) -->
        <activity
            android:name="com.naver.login.OAuthLoginActivity"
            android:launchMode="singleTask"
            android:excludeFromRecents="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="naverIGdjiddEnJx86dWfnGW0" />
            </intent-filter>
        </activity>

        <!-- Flutter 설정 (기존 유지) -->
        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>

    <!-- 기타 쿼리 인텐트 (기존 유지) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>